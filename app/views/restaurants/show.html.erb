<div class='container'>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %><br>
  Rating: <%= review.rating %></p><br>
<% end %>


<h4>Add a review</h4>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :rating %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
<br>
<%= link_to 'Back', restaurants_path %>

